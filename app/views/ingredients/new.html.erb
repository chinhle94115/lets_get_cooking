<div class="panel-newingredients">
  <div class="panel-heading">
    <h1 class="brand-heading"> New Ingredient </h1>
  </div>
    <div class="col-md-6 col-md-offset-3">
        <p>
          <%= simple_form_for @ingredient do |f| %>
            <li align="right"><%= f.input :name, label: false, input_html: {placeholder: "Let's Get Your New Ingredient"} %></li>
            <%= f.submit "Submit".html_safe, class: "btn btn-lg btn-warning" %>

          <% end %>
        </p>
    </div>
  </div>
